<link rel="stylesheet" href="./css/styles.css"/>
<div id="login-page" class="container my-flex d-flex flex-column justify-content-center align-items-center">
<% if (msg) { %> 
    <div>
        <p><%= msg %> </p>
    </div>
<% } %> 
    <form method="POST" action="/" class="d-flex flex-column w-25 form-control">
        <div class="form-floating mb-3">
            <input id="email" type="email" name="email" placeholder="Enter your email" class="form-control" required/>
            <label for="email">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input id="password" type="password" name="password" placeholder="Enter your password" class="form-control" required/>
            <label for="password">Password</label>
        </div>
    <button type="submit" class="form-control">Login!</button> 
    </form>
    <p>Don't have an account yet? <a href="/users/new">Sign Up!</a> </p>
</div>    
<script src="/js/script.js"></script>