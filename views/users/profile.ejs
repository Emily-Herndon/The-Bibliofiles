<h2><%= user.username %>'s Profile</h2>



<form method="GET" action="/books/results">
    <label for="search"></label>
    <input type="text"  id="search" name="bookSearch" />
    <input type="submit" />
  </form>


  <h3>Your Saved Books</h3>

  <ul>
    <% savedBooks.forEach(book => { %> 
      <li> <a href="/books/details<%= book.bookid %>"> <%= book.title %> </a>
        <p>Tags:
          <% book.tags.forEach(tag => { %> 
            (<%= tag.title %>)  
            <% }) %> 
        </p>
        <form method="POST" action="/users/profile/?_method=DELETE">
          <input hidden value="<%= book.id %>" name="id"/>
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }) %> 
  </ul>