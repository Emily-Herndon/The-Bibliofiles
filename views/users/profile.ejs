<link rel="stylesheet" href="../css/styles.css"/>

<div id="profile-page" class="container d-flex flex-column justify-content-center align-items-center mt-5">
  <div class="my-2">
    <h2><%= user.username %>'s Profile</h2>
  </div>
  
  
    <div class="mb-4 justify-content-center align-items-center">
      <h3>Your Saved Books</h3>
    </div>
  
    <div class="container justify-content-center text-center align-items-center">
    <% savedBooks.forEach(book => { %>
      <div class="thingy justify-content-center align-items-center d-flex mb-2">
        <div class="col"><a href="/books/details<%= book.bookid %>"> <%= book.title %></a> </div>
        <div class="col">
          Tags:
          <% book.tags.forEach(tag => { %>
            (<%= tag.title %>)
            <% }) %>
          </div>
          <div class="col my-1">
            <form method="POST" action="/users/profile/?_method=DELETE">
              <input hidden value="<%= book.id %>" name="id"/>
              <button class="btn btn-danger" type="submit">Remove Book</button>
            </form>
        </div>
      </div>
      <% }) %>
    </div>
</div>